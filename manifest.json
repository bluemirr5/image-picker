{
  "manifest_version": 2,

  "name": "Image Capture",
  "description": "This extension is tool for Capture Image",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "<all_urls>",
    "pageCapture"
  ]
}